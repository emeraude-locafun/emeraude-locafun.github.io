---
interface Props {
  title: string;
  publishDate: Date;
  excerpt: string;
  image?: string;
  slug: string;
}

const { title, publishDate, excerpt, image, slug } = Astro.props;

// Formatage de la date en français (ex: 12 Juin 2026)
const formattedDate = new Date(publishDate).toLocaleDateString('fr-FR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric',
});
---

<article class="flex flex-col bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow duration-300 h-full">
  <a href={`/actualites/${slug}`} class="group relative block h-48 overflow-hidden bg-gray-100">
    {image ? (
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" 
      />
    ) : (
      <div class="flex items-center justify-center h-full bg-emerald-50 text-emerald-200">
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path></svg>
      </div>
    )}
    <div class="absolute top-0 right-0 bg-emerald-600 text-white text-xs font-bold px-3 py-1 rounded-bl-lg">
      Actu
    </div>
  </a>

  <div class="flex-1 p-6 flex flex-col">
    <div class="text-xs text-gray-500 mb-2 flex items-center">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
      {formattedDate}
    </div>
    
    <h3 class="text-xl font-bold text-gray-900 mb-3 font-heading leading-tight group-hover:text-emerald-600 transition-colors">
      <a href={`/actualites/${slug}`}>
        {title}
      </a>
    </h3>
    
    <p class="text-gray-600 mb-4 text-sm flex-grow line-clamp-3">
      {excerpt}
    </p>
    
    <a href={`/actualites/${slug}`} class="inline-flex items-center text-emerald-600 font-bold text-sm hover:underline mt-auto">
      Lire l'article <span class="ml-1">→</span>
    </a>
  </div>
</article>