---
interface Props {
  title: string;
  type: string;
  capacity: string;
  description: string;
  image?: string;
  slug: string; // <--- Ajout de la prop slug
}

const { title, type, capacity, description, image, slug } = Astro.props;

// Code couleur (identique Ã  avant)
const typeColor = type === 'Catamaran' ? 'bg-blue-100 text-blue-800' 
                : type === 'Kayak' ? 'bg-orange-100 text-orange-800'
                : 'bg-emerald-100 text-emerald-800';
---

<article class="group bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col h-full">
  <!-- Lien global sur l'image pour l'UX -->
  <a href={`/flotte/${slug}`} class="block relative h-56 overflow-hidden bg-gray-200">
    {image ? (
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" 
        transition:name={`image-${slug}`} /* Petite animation de transition Astro */
      />
    ) : (
      <div class="flex items-center justify-center h-full text-gray-400">Pas d'image</div>
    )}
    <div class="absolute top-4 left-4">
      <span class={`px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide ${typeColor}`}>
        {type}
      </span>
    </div>
  </a>

  <div class="p-6 flex-grow flex flex-col">
    <div class="flex justify-between items-start mb-2">
      <h3 class="text-xl font-bold text-gray-900 font-heading">
        <a href={`/flotte/${slug}`} class="hover:text-emerald-600 transition">
          {title}
        </a>
      </h3>
    </div>
    
    <div class="flex items-center text-sm text-gray-500 mb-4">
      <span class="mr-1">ðŸ‘¥</span> {capacity}
    </div>

    <p class="text-gray-600 mb-6 flex-grow line-clamp-3">
      {description}
    </p>

    <div class="pt-4 border-t border-gray-100">
      <a href={`/flotte/${slug}`} class="inline-flex items-center text-emerald-600 font-bold hover:text-emerald-800 transition text-sm group-hover:underline">
        En savoir plus 
        <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
      </a>
    </div>
  </div>
</article>