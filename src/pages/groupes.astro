---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.vue';
import { getEntry } from 'astro:content';
import ResponsiveImage from '../components/ResponsiveImage.vue';

// Récupération du contenu "groupes"
const entry = await getEntry('pages', 'groupes');
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} | Émeraude Loca-fun`}>
  <Header client:load />

  <main>
    <!-- En-tête de page -->
    <div class="relative h-[40vh] min-h-[300px] flex items-center justify-center bg-emerald-900">
      {entry.data.image && (
        <img src={entry.data.image} alt={entry.data.title} class="absolute inset-0 w-full h-full object-cover opacity-50 mix-blend-overlay" />
      )}
      <div class="relative z-10 text-center px-4">
        <span class="inline-block py-1 px-3 rounded-full bg-yellow-400 text-yellow-900 text-xs font-bold tracking-wider mb-4 uppercase">Événements</span>
        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4 font-heading">{entry.data.title}</h1>
        <p class="text-xl text-white/90 font-medium">{entry.data.subtitle}</p>
      </div>
    </div>

    <!-- Contenu -->
    <section class="max-w-4xl mx-auto px-4 py-16">
      <div class="bg-white p-8 md:p-12 rounded-2xl shadow-xl border-t-4 border-yellow-400">
         <div class="prose prose-lg prose-yellow max-w-none">
            <Content components={{ ResponsiveImage }} />
         </div>
      </div>

      <!-- Bloc Action -->
      <div class="mt-12 bg-emerald-50 rounded-xl p-8 text-center border border-emerald-100">
        <h3 class="text-2xl font-bold text-emerald-900 mb-2">Une demande particulière ?</h3>
        <p class="text-emerald-700 mb-6">Devis gratuit et réponse rapide pour vos événements.</p>
        <a href="/#contact" class="inline-block px-8 py-3 bg-emerald-600 text-white font-bold rounded-full hover:bg-emerald-700 transition shadow-md">
          Nous contacter
        </a>
      </div>
    </section>
  </main>
</Layout>